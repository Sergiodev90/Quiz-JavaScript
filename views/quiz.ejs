<p class="SCORE">SCORE: <%= score%></p>

<div class="container__quiz-choosen">

   

   <form action="/quiz/submit" method="post">
   
   <%data.slice(indexPageStart,indexPageEnd).forEach((item) =>{%>
      <div class="header__question">
         <h1 class="title__category-questions"> <%= item.category %></h1>
         <h1 class="title__lenght_questions"> <%=item.index %> / <%= data.length %></h1>
      </div>
      <h2 class="title__question-questions"><%= item.question %></h2>
      <%item.answers.forEach(element => { %>
         <div class="container__options-question">
         <button type="submit" class="button__Answer button__section-question" name="choice" value="<%= element%>"><%=element%></button>
      </div>
      <%});%>
   <%})%>
</form>
 <!-- Muestra el puntaje -->
   <!-- BotÃ³n "Next" -->
</div>
<div class="container__bottom-question">
   <span>   <% if (message) { %>
   <p class="message__question"><%= message %></p> <!-- Muestra el mensaje de respuesta -->
   <% } %>
   </span>
   <button class="button__next button__section-question">Next</button>
</div>



